@model CvDeneme.Models.CvInformation

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-center font-weight-bold">Kullanıcı Silme Ekranı</h2>

<h4 class="text-success">Bu kullanıcıyı silmek istediğinizden emin misiniz?</h4>
<div class="center-block">
    <h5 class="text-success">Cv Bilgileri</h5>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            <br /><br /><br />
            <label class="control-label col-md-10 text-success">Resim</label>
        </dt>

        <dd>
            <br />
            <img src="@Model.Image" class="img-rounded" style="width:100px; height:100px" />
        </dd>

        <dt>
            <br />
            <label class="control-label col-md-10 text-success">İsim</label>
        </dt>

        <dd>
            <br />
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            <label class="control-label col-md-10 text-success">Soyisim</label>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.LName)
        </dd>

        <dt>
            <label class="control-label col-md-10 text-success">Telefon No</label>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Phone)
        </dd>

        <dt>
            <label class="control-label col-md-10 text-success">E-Mail</label>
        </dt>

        <dd>
            <a href="mailto:">@Html.DisplayFor(model => model.Mail)</a>
        </dd>

        <dt>
            <label class="control-label col-md-10 text-success">Adres</label>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Adress)
        </dd>

        <dt>
            <label class="control-label col-md-10 text-success">Pozisyon/Görev</label>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Position)
        </dd>

        <dt>
            <label class="control-label col-md-10 text-success">Kendinizden Bahsediniz</label>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CoverLetter)
        </dd>

        <dt>
            <label class="control-label col-md-10 text-success">Eğitim Bilgileri</label>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Education)
        </dd>

        <dt>
            <label class="control-label col-md-10 text-success">Deneyimler</label>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Experience)
        </dd>

        <dt>
            <label class="control-label col-md-10 text-success">Yetenekler</label>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Skills)
        </dd>

        <dt>
            <label class="control-label col-md-10 text-success">Sertifika</label>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Certificate)
        </dd>

        <dt>
            <label class="control-label col-md-10 text-success">Sertifika Dokümanı</label>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Documan)
        </dd>

        <dt>
            <label class="control-label col-md-10 text-success">Referanslar</label>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Reference)
        </dd>

        <dt>
            <label class="control-label col-md-10 text-success">Hobi ve İlgi Alanları</label>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Hobby)    
        </dd>
        <dd><br />
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-actions no-color">
                    <input type="submit" value="Sil" class="btn btn-success" /> |
                    @Html.ActionLink("Geri Dön", "Index")
                </div>
            }
        </dd>

    </dl>
</div>

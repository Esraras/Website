@model IEnumerable<CvDeneme.Models.CvInformation>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-center font-weight-bold">Yönetim Ekranı</h2>

<p>
    @Html.ActionLink("Yeni Başvuru Oluştur", "Create")
</p>
<table class="table ">
    <tr>
        <th>
            <label class="control-label col-md-10 text-success">Resim</label>
        </th>
        <th>
            <label class="control-label col-md-10 text-success">İsim</label>
        </th>
        <th>
            <label class="control-label col-md-10 text-success">Soyisim</label>
        </th>
        <th>
            <label class="control-label col-md-10 text-success">Telefon No</label>
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                <img src="@item.Image" style="width:100px; height:100px" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LName)
            </td>
            <td>
                <a href="tel:">@Html.DisplayFor(modelItem => item.Phone)</a>
            </td>
            <td>
                @Html.ActionLink("Görüntüle", "Details", new { id = item.Id }) |
                @Html.ActionLink("Sil", "Delete", new { id = item.Id })
            </td>
        </tr>
    }
</table>
